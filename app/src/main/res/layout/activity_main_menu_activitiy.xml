<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.hevs.gym.fitnessapp.MainMenuActivitiy">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/id_welcomeMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showExersiseCatagory"
            android:text="@string/button_exercises" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showExersisePlans"
            android:text="@string/button_plan" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showGroups"
            android:text="@string/button_group" />
        <Button
            android:id="@+id/addnewEx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="creatExersis"
            android:text="@string/button_newE" />

        <Button
            android:id="@+id/buttonusers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Users"
            android:text="@string/button_Users" />

    </LinearLayout>
</ScrollView>
